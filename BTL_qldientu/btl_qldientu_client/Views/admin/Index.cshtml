@model IEnumerable<btl_qldientu_client.Models.admin>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
  @* @Html.ActionLink("Create New", "Create")*@
    <a href="@Url.Action("addoredit","admin")" class="btn btn-default"><i class="fa fa-plus"></i>create new</a> 
</p>
<table class="table table-striped">
    <thead class="table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ad_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ad_username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ad_password)
            </th>
            <th></th>
        </tr>
    </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ad_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ad_username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ad_password)
                </td>
                <td>
                    <a href="@Url.Action("addoredit","admin")" class="btn btn-default"><i class="fa fa-pencil"></i>Edit</a>
                    <a onclick="Delete(@item.ad_id" class="btn btn-default"><i class="fa fa-trash"></i>delete</a>
                </td>
            </tr>
        }

</table>
@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });

        function Delete(id) {
            alertify.confirm('you can delete??',function(){
                window.location.href  = '@Url.Action("Delete","admin")/'+id;
            },null );
        }
    </script>
    }
